<div class="container" style="margin:30px 1px 5px 40% ">
  <div class="row">
    <div class="col-sm-6 text-left" > 
    <p>
      <%= image_tag(@post.user.image_url, :class => "user") %>
      <%= @post.user.name %>
    </p>
     <p>
      <%= image_tag @post.image_url, :class => "imgsize" %>
     </p>
     
        <% if @favorite.present? %>
          <%= link_to 'Cancel favorites', favorite_path(post_id: @post.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'To favorite', favorites_path(post_id: @post.id), method: :post, class: 'btn-success' %>
        <% end %>
          <%= link_to 'Edit', edit_post_path(@post), class: 'btn-primary' %>
     
      <h2>Comments</h2>
      <%= render @post.comments %>
 
     <h2>Add a comment:</h2>
     <%= render 'comments/form' %>
    </div>
  </div>
</div>
