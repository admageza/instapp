<div class="container" style="margin:30px 1px 5px 40% ">
  <div class="row">
    <div class="col-sm-6 text-left" > 
    <p>
      <%= image_tag(@post.user.image_url, :class => "user") %>
      <%= @post.user.name %>
    </p>
     <p>
      <%= image_tag @post.image_url, :class => "imgsize" %>
     </p>
     
        <% if @favorite.present? %>
          <button type="button" class="btn btn-danger"><%= link_to 'Unlike', favorite_path(post_id: @post.id), method: :delete %></button>
        <% else %>
          <button type="button" , class="btn-success"><%= link_to 'Like', favorites_path(post_id: @post.id), method: :post %></button>
        <% end %>
          <button type="button" class="btn-primary"><%= link_to 'Edit', edit_post_path(@post) %></button>
     
      <h2>Comments</h2>
      <%= render @post.comments %>
 
     <h2>Add a comment:</h2>
     <%= render 'comments/form' %>
    </div>
  </div>
</div>
