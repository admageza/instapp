<div class="container" style="margin:2% 2% 5% 2%">
    <div id="home">
      <div class="row ">
           <% @posts.each do |post| %>
           <div class="list col-sm-4 ">
              <p>
                <%= image_tag(post.user.image_url, :class => "user") %>
                <%= post.user.name %> 
              </p>
              <p><%= link_to image_tag(post.image.url, :class => "imgsize"), post %></p>
             <% if post.user == current_user %>
               <%= link_to 'Edit', edit_post_path(post) %>
               <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
             <% end %>
             </div>
           <% end %>
     </div>
    </div>
<br>

<%= link_to 'New Post', new_post_path %>
</div>
